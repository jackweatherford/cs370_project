<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainRecordActivity"
    android:background="@color/colorPrimaryDark"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/linearLayoutRecorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="20dp">

        <Chronometer
            android:id="@+id/chronometerTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/linearLayoutPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/imageViewPlay"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/play2"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:id="@+id/imageViewRecord"
                android:layout_width="100dp"
                android:layout_height="175dp"
                android:src="@drawable/recordpicture"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                />

            <ImageView
                android:id="@+id/imageViewStop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/stop"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="@color/colorPrimaryDark"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/listButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorSecondaryText"
            android:text="Recordings" />

        <Button
            android:id="@+id/existRecordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="61dp"
            android:layout_toRightOf="@id/listButton"
            android:background="@color/colorSecondaryText"
            android:text="Record From Existing" />

    </RelativeLayout>">

</android.support.constraint.ConstraintLayout>