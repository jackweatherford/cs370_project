<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Soundboard">
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/Soundboard</item>
        <item name="android:text">Sound Bored Soundboard</item>
        <item name="colorPrimary">@android:color/holo_blue_bright</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Soundboard" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="actionBarTheme">@style/Soundboard</item>
        <item name="actionModeBackground">@android:color/holo_blue_bright</item>
        <item name="android:colorPrimaryDark">#00004f</item>
        <item name="android:colorPrimary">@android:color/holo_blue_bright</item>
        <item name="android:textColorPrimary">?android:attr/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_bright</item>
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
    </style>


    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="VerticalDividerForList">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">4px</item>
        <item name="android:background">#444444</item>
    </style>


</resources>
